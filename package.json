{
  "name": "js-scratch",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*",
    "applications/*"
  ],
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier . --check"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean:node_modules && npm run clean --workspaces --if-present",
    "clean:dist": "npm run clean:dist --workspaces --if-present",
    "clean:node_modules": "rm -rf node_modules",
    "dev": "npm run dev --workspaces --if-present",
    "dev:playground": "npm run dev --workspace=playground",
    "format": "prettier . -c",
    "format:fix": "prettier . -w",
    "install:root": "npm install --workspaces=false",
    "lint": "eslint . --fix",
    "reset": "npm run clean && npm install && npm run build",
    "test": "npm run test:silent --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@faker-js/faker": "^8.4.1",
    "@stylistic/eslint-plugin-js": "^2.3.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
